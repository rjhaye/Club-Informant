<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SettingsFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_profile_picture"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/select_image" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/top_left_guideline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent=".05" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/top_center_left_guideline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.45" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/top_center_right_guideline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.5" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/top_right_guideline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.95" />

            <androidx.cardview.widget.CardView
                android:id="@+id/cardView"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:elevation="20dp"
                app:cardCornerRadius="20dp"
                app:layout_constraintBottom_toTopOf="@+id/left_center_top_guideline"
                app:layout_constraintEnd_toEndOf="@id/top_center_left_guideline"
                app:layout_constraintStart_toStartOf="@id/top_left_guideline"
                app:layout_constraintTop_toTopOf="@+id/left_top_guideline">

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:elevation="20dp"
                app:cardCornerRadius="20dp"
                app:layout_constraintBottom_toTopOf="@+id/left_center_top_guideline"
                app:layout_constraintEnd_toStartOf="@+id/top_right_guideline"
                app:layout_constraintStart_toStartOf="@+id/top_center_right_guideline"
                app:layout_constraintTop_toBottomOf="@+id/left_top_guideline">

            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:elevation="20dp"
                app:cardCornerRadius="20dp"
                app:layout_constraintBottom_toTopOf="@+id/left_center_bottom_guideline"
                app:layout_constraintEnd_toStartOf="@+id/top_right_guideline"
                app:layout_constraintStart_toStartOf="@+id/top_center_right_guideline"
                app:layout_constraintTop_toTopOf="@+id/left_center_top_guideline">

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:elevation="20dp"
                app:cardCornerRadius="20dp"
                app:layout_constraintBottom_toTopOf="@+id/left_bottom_guideline"
                app:layout_constraintEnd_toStartOf="@+id/top_right_guideline"
                app:layout_constraintStart_toStartOf="@+id/top_left_guideline"
                app:layout_constraintTop_toTopOf="@+id/left_center_bottom_guideline">

            </androidx.cardview.widget.CardView>

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/left_top_guideline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent=".05" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/left_center_top_guideline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.3" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/left_center_bottom_guideline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.6" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/left_bottom_guideline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.9" />

            <androidx.cardview.widget.CardView
                android:layout_width="165dp"
                android:layout_height="189dp"
                android:elevation="20dp"
                app:cardCornerRadius="20dp"
                app:layout_constraintBottom_toTopOf="@+id/left_center_bottom_guideline"
                app:layout_constraintEnd_toEndOf="@id/top_center_left_guideline"
                app:layout_constraintStart_toStartOf="@id/top_left_guideline"
                app:layout_constraintTop_toTopOf="@+id/left_center_top_guideline">

            </androidx.cardview.widget.CardView>


        </androidx.constraintlayout.widget.ConstraintLayout>


    </LinearLayout>
</FrameLayout>